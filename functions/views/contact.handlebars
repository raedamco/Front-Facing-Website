<main class="flex-container">
	<div class="flex-item">
		<div class="aligntextleft padding">
			<h2>Contact us.</h2>
			<p><span class="rot13">bzne@enrqnz.pb</span><br><span class="rot5">(426)-864-6296</span></p>
			<p>2828 South Corbett Avenue<br>Portland, OR 97201</p>
		</div>
		<div class="aligntextleft padding">
			{{> social}}
		</div>
		<div class="padding">
			<iframe defer
				width="100%"
				height="450"
				frameborder="0"
				style="border:0"
				style="filter: invert(90%)"
				src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA8dg1BPqoqCfO9MjyfKsjmPsLvYSrNNgs
                	&q=2828 South Corbett Avenue, Portland, OR 97201
                	&zoom=12" allowfullscreen>
			</iframe>
		</div>
	</div>
	<div class="flex-item">
		<form class="padding">
			<fieldset>
				<legend>Name *</legend>
				<div class="alignleft fifty">
					<input name="firstname" type="text" required />
					<label for="firstname">First Name</label>
				</div>
				<div class="alignright fifty">
					<input name="lastname" type="text" required />
					<label for="lastname">Last Name</label>
				</div>
				<br class="clear" />
			</fieldset>
			<fieldset>
				<label for="email">Email *</label>
				<input name="email" type="email" required />
			</fieldset>
			<fieldset>
				<label for="message">Message *</label>
				<textarea name="message" type="text" required></textarea>
			</fieldset>
			<fieldset>
				<input class="button" type="submit" value="Send" />
			</fieldset>
		</form>
	</div>
</main>