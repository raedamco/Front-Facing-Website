<script>
    // Change underline of header nav that matches the current url
    $(document).ready(function()
    {
        $("#header nav a").each(function()
        {
            let path = $(this).attr('href');
            if(path === location.pathname)
            {
                $(this).addClass("currentpage");
            }
        });
    });
</script>